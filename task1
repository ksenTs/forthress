( if number is odd - 1, else - 0 )
: isEven 2 % ;

( if number is prime - 1, else 0 )
: isPrime
dup 2 < not 
if
    1 >r
    repeat 
        dup r> 1 + dup >r % not 
    until 
    r>
    =
else 
    drop 0 then
;

( saves result of isPrime, returns address )
: prime_allot isPrime 8 allot dup -rot ! ; 
